package nl.saxion;

import robocode.TeamRobot;

public class CornerDefender extends TeamRobot {
// hier variabelen

    public void run(){
    // hier startPosition()
        while (true) {
        // hier algemene run methode
        }
        
        // hier methodes toevoegen
        
        /**
     * @author William
     */
    public void goStartPosition() {
        double dynamicWidth;
        turnLeft(getHeading() - 180);

        setAhead(getY() - 50);
        while (getDistanceRemaining() > 0) {
            execute();
        }

        turnRight(90);

        dynamicWidth = (getBattleFieldWidth() * 0.20);

        setAhead(getX() - getWidth() - dynamicWidth);
        while (getDistanceRemaining() > 0) {
            execute();
        }
    }
    }
